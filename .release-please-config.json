{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "bootstrap-sha": "",
  "packages": {
    "back": {
      "path": "back",
      "release-type": "java",
      "package-name": "bobapp-back",
      "changelog-path": "CHANGELOG.md"
    },
    "front": {
      "path": "front",
      "release-type": "node",
      "package-name": "bobapp-frontend",
      "changelog-path": "CHANGELOG.md"
    }
  },
  "plugins": {
    "cargo-workspace": false
  },
  "include-component-in-tag": true,
  "separate-pull-requests": true,
  "pull-request-title-pattern": "chore${scope}: release${component} ${version}",
  "pull-request-header": "\n:rocket: Release PR générée par release-please (monorepo back/front)\n",
  "changelog-sections": [
    { "type": "feat", "section": "Features", "hidden": false },
    { "type": "fix", "section": "Bug Fixes", "hidden": false },
    { "type": "perf", "section": "Performance", "hidden": false },
    { "type": "refactor", "section": "Refactoring", "hidden": false },
    { "type": "docs", "section": "Documentation", "hidden": false },
    { "type": "build", "section": "Build System", "hidden": false },
    { "type": "ci", "section": "CI", "hidden": true },
    { "type": "Release", "section": "Chores", "hidden": true }
  ]
}